<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Bienvenue -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue, parent !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Visualiser les moments de connexion de l’élève. -->
    <TextView
        android:id="@+id/connectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Visualiser les moments de connexion de l’élève."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Visualiser les cours et les exercices réalisés par l’élève. -->
    <TextView
        android:id="@+id/coursesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Visualiser les cours et les exercices réalisés par l’élève."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Visualiser les durées d’activité sur l’application. -->
    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Visualiser les durées d’activité sur l’application."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Visualiser des courbes de progression. -->
    <TextView
        android:id="@+id/progressionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Visualiser des courbes de progression."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Visualiser des recommandations pour la progression de l’élève. -->
    <TextView
        android:id="@+id/recommendationsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Visualiser des recommandations pour la progression de l’élève.\n- Recommandations pour une progression adaptée à l’élève concerné.\n- Recommandations et conseils généraux."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Définir des moments de rappel à l’élève pour revenir sur l’application. -->
    <TextView
        android:id="@+id/remindersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Définir des moments de rappel à l’élève pour revenir sur l’application."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

</LinearLayout>