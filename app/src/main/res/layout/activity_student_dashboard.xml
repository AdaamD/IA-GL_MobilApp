<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StudentDashboardActivity">

    <!-- Bienvenue -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <!-- Cours -->
    <Button
        android:id="@+id/coursesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Cours"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toStartOf="@+id/exercisesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Exercices -->
    <Button
        android:id="@+id/exercisesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Exercices"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toStartOf="@+id/recommendationsButton"
        app:layout_constraintStart_toEndOf="@+id/coursesButton"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Recommandations -->
    <Button
        android:id="@+id/recommendationsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Recommandations"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exercisesButton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>